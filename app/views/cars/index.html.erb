<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<h2>All Cars</h2>

<h4>Search by Make:</h4>
<%= form_tag(cars_path, method: :get) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %>
<% end %>

<% @cars.each do |car| %>
  <ul>
    <li><%= link_to car.name, car_path(make) %></li><br>
  </ul>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Make</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.make.name %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

